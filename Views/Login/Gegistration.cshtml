@model WebApplication.ViewModels.VMAddUser
@{
    ViewData["Title"] = "Gegistration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Gegistration</h1>

<div asp-validation-summary="All"></div>
<form asp-action="Registation" asp-controller="Login" method="post">

    <div>
        <label asp-for="EMail"></label>
        <input asp-for="EMail" />
        <span asp-validation-for="EMail"></span>
    </div>

    <div>
        <label asp-for="FName"></label>
        <input asp-for="FName" />
        <span asp-validation-for="FName"></span>
    </div>

    <div>
        <label asp-for="LName"></label>
        <input asp-for="LName" />
        <span asp-validation-for="LName"></span>
    </div>

    <div>
        <label asp-for="Password"></label>
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>

    <div>
        <label asp-for="ConfirmPassword"></label>
        <input asp-for="ConfirmPassword" />
        <span asp-validation-for="ConfirmPassword"></span>
    </div>

    <button type="submit">Добавить...</button>

</form>