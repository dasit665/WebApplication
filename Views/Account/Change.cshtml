@model WebApplication.ViewModels.VMUserAndRoles
@{
    ViewData["Title"] = "Change";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Change</h1>

<div asp-validation-summary="All"></div>

<form asp-action="Change" asp-controller="Account" method="post">

    <input asp-for="ID" type="hidden" value="@Model.ID" />

    <div>
        <label asp-for="EMail"></label>
        <input asp-for="EMail" />
        <span asp-validation-for="EMail"></span>
    </div>


    <div>
        <label asp-for="FName"></label>
        <input asp-for="FName" />
        <span asp-validation-for="FName"></span>
    </div>

    <div>
        <label asp-for="LName"></label>
        <input asp-for="LName" />
        <span asp-validation-for="LName"></span>
    </div>

    @foreach(var i in Model.UserRoles)
    {
        <label>@i.Key</label><input type="checkbox" name="@i.Key" checked="@i.Value" /><br />
    }


    <button type="submit">Отправить</button>

</form>